<div class="well">
    @if (Model.Count > 0)
    {
        <ul>
        @foreach (var roll in Model)
        {
            <li>@roll.Name -  @roll.Value</li>
        }
        </ul>
    }
    else
    {
        <p>Inga Rollningar!</p>
    }
</div>
<div class="well">
    <form method="post" action="@Url.Action("Store", "Rolls")">
        <div class="form-group">
            <input type="text" class="form-control" id="name" name="name" placeholder="Skriv namn">
        </div>
        <button type="submit" class="btn btn-default">ROLLA</button>
    </form>
</div>